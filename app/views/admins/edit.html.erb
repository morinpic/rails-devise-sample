<h2>Edit Admin</h2>

<%= simple_form_for @admin, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admins_path, :class => 'btn' %>
  </div>
<% end %>
